<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/aop 
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
     
    <aop:aspectj-autoproxy />
     
    <bean id="busService" class="com.example.bean.MyBusinessService" />
    <bean id="aroundThrowAspectBean" class="com.example.bean.ExecuteAroundMethod" />
    <bean id="beforeThrowsAspectBean" class="com.example.bean.ExecuteBeforeMethod" />
    <bean id="afterThrowsAspectBean" class="com.example.bean.ExecuteAfterMethod" />
    
    <aop:config>
  		<aop:pointcut id="businessService" 
        	expression="execution(* com.example.bean.MyBusinessService.runMyBusinessLogic())"/>
	</aop:config>
    
    
    
 </beans>